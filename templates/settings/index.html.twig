{% extends 'base.html.twig' %}

{% block title %}Settings index{% endblock %}
{% block pageTitle %}
    <a href="{{ path('settings_new') }}">Create new option</a>
    <span class="badge badge-info">
        {{ settings|length }}
    </span>
{% endblock %}
{% block body %}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.name }}</td>
                <td>{{ setting.value }}</td>
                <td>{{ setting.description }}</td>
                <td>
                    <a href="{{ path('settings_show', {'id': setting.id})  }}">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('settings_edit', {'id': setting.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
