{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{% block pageTitle %}
    User show page |
    <a href="{{ path('user_index') }}">back to list</a> |
    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a> |

    Created at: {{ user.createdAt|date('Y-m-d')}} |
    Updated at: {{ user.updatedAt|date('Y-m-d') }}
{% endblock %}
{% block body %}

<div class="row">
    <table class="table table-striped table-hover table-sm table-responsive-md">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.secondEmail }}</td>
            </tr>

            <tr>
                <th>Section</th>
                <td>{{ user.section }}</td>
            </tr>
            <tr>
                <th>Is Retired</th>
                <td>{{ user.isRetired }}</td>
            </tr>

            <tr>
                <th>ScientificTitles</th>
                <td>
                    {% for scientificTitle in  user.scientificTitles  %}
                        {{ scientificTitle.grade }}
                     {% endfor %}

                </td>
            </tr>
        

        </tbody>
    </table>
 </div>
 <div class="row">
     <div class="col-md-6">
         {% for activity in user.activities %}
             <div class="card">
                 <div class="card-header">{{ activity.type~' '~activity.year|date('Y') }}</div>
                 <div class="card-body">{{ activity.description|slice(0, 50) ~ '...' }}</div>
                 <div class="card-footer">
                     <a href="{{ path("activity_show",{id:activity.id}) }}">
                         <i class="fas fa-eye"></i>
                     </a>
                 </div>
             </div>
         {% endfor %}
     </div>
     <div class="col-md-6">
         {% for citation in user.citations %}
             <div class="card">
                 <div class="card-header">{{ citation.year|date('Y') }}</div>
                 <div class="card-body">
                     Citations: {{ citation.wosCitations }} |  Printscreen URL: {{ citation.printScreenUrl }}o


                 </div>
                 <div class="card-footer">
                     <a href="{{ path("citation_show",{id:citation.id}) }}">
                         <i class="fas fa-eye"></i>
                     </a>
                 </div>
             </div>
         {% endfor %}
     </div>
 </div>

{% endblock %}
