<table style="width:100%;color:#2b5e92;background-color: #F2F1F1;text-align:center" cellspacing="2" cellpadding="1" >
    <tr style="background-color:#2b5e92;color:white;">
        <th colspan="10">
            <h4>Sectiunea A2: Articole stiintifice - {{ articles.totalPoints|number_format(3) }} puncte</h4>
        </th>
    </tr>
    <tr style="background-color:#FEC643;">
        <th style="width:4%">#</th>
        <th style="width:20%">Titlu articol</th>
        <th style="width:15%">Autori</th>
        <th style="width:6%">Neff</th>
        <th style="width:16%">Jurnal</th>
        <th style="width:7%">AIS</th>
        <th style="width:8%">Corectie AIS</th>
        <th style="width:8%">I</th>
        <th style="width:8%">P</th>
        <th style="width:8%">Total/2</th>
    </tr>

    {% for article in articles.items %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ article.title }}</td>
            <td>{{ article.authors }}</td>
            <td>{{ article.neff|number_format(2) }}</td>
            <td>{{ article.journal }}</td>
            <td>{{ article.AIS|number_format(2) }}</td>
            <td>{{ article.correction }}</td>
            <td>{{ article.i|number_format(3)}}</td>
            <td>{{ article.p|number_format(3) }}</td>
            <td>{{ article.total|number_format(3) }}</td>
        </tr>
    {% endfor %}
</table>
