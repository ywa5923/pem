<table style="width:100%;color:#2b5e92;background-color: #F2F1F1;text-align:center" cellspacing="2" cellpadding="1">

    <tr style="background-color:#2b5e92;color:white;">
        <th colspan="8">
            <h4>Sectiunea A1.1: Brevete - {{ patents.totalPoints|number_format(3) }} puncte</h4>
        </th>
    </tr>
    <tr style="background-color:#FEC643;">
        <th style="width:4%">#</th>
        <th style="width:20%">Titlu brevet</th>
        <th style="width:19%">Autori</th>
        <th style="width:8%">Neff</th>
        <th style="width:8%">Patent Type</th>
        <th style="width:11%">Nr inregistrare</th>
        <th style="width:11%">Publicat in B.O.P.I, data, pagina</th>
        <th style="width:11%">Nr si data deciziei de acordare/publicare</th>
        <th style="width:8%">Punctaj</th>

    </tr>

    {% for patent in patents.items %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ patent.title }}</td>
            <td>{{ patent.authors }}</td>
            <td>{{ patent.neff|number_format(2) }}</td>
            <td>{{ patent.patentType }}</td>
            <td>{{ patent.doi }}</td>
            <td>{{ patent.journal }}</td>
            <td>{{ patent.miscellanous }}</td>
            <td>{{ patent.total|number_format(3) }}</td>
        </tr>
    {% endfor %}
</table>