<form method="post" action="{{ path('citation_delete', {'id': citation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ citation.id) }}">
    <button class="btn btn-danger btn-lg btn-block">Delete</button>
</form>
