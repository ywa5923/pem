{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}
{% block pageTitle %}
    Project page
    <a href="{{ path('project_index') }}">back to list</a> |
    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a> |

    Created at: {{ project.createdAt|date('Y-m-d')}} |
    Updated at: {{ project.updatedAt|date('Y-m-d') }}
{% endblock %}
{% block body %}

<div class="row">
    <table class="table table-striped table-hover table-sm table-responsive-md">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Contract</th>
                <td>{{ project.contract }}</td>
            </tr>
            <tr>
                <th>Program</th>
                <td>{{ project.category }}</td>
            </tr>

            <tr>
                <th>Type</th>
                <td>{{ project.type }}</td>
            </tr>

            <tr>
                <th>Project Users</th>
                <td>
                    {% for userProject in project.projectUsers %}
                        <span class="article-author-info">
                           <i class="fas fa-user-secret"></i>
                            {{userProject.user.firstName~' '~userProject.user.lastName~': '~userProject.user.email }} |Income:
                               {% for budget in userProject.budgets %}
                                   <b> {{ budget.year|date('Y') }}:</b> {{ budget.budget }} RON ({{ budget.type }})
                               {% endfor %}
                        </span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
</div>

{% endblock %}
