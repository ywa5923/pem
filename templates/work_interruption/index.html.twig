{% extends 'base.html.twig' %}

{% block title %}WorkInterruption index{% endblock %}

{% block pageTitle %}
    Work Interruptions|<a href="{{ path('work_interruption_new') }}"> Create new item </a> <span class="badge badge-info"></span>
{% endblock %}

{% block body %}
   <div class="row">
    <table class="table table-striped table-hover table-sm table-responsive-md">
        <thead>
            <tr>
                <th>#</th>
                <th>User</th>
                <th>Description</th>
                <th>BeginDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work_interruption in work_interruptions %}
            <tr>
                <td><b>{{ loop.index + 50*(page-1) }}</b></td>
                <td>{{ work_interruption.user }}</td>
                <td>{{ work_interruption.description }}</td>
                <td>{{ work_interruption.beginDate ? work_interruption.beginDate|date('Y-m-d') : '' }}</td>
                <td>{{ work_interruption.endDate ? work_interruption.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('work_interruption_show', {'id': work_interruption.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('work_interruption_edit', {'id': work_interruption.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div>

{% endblock %}
